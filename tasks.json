{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: Build and Run",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "--build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Docker: Run in Background",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d", "--build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "Docker: Stop Containers",
      "type": "shell",
      "command": "docker-compose",
      "args": ["down"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "Docker: Analyze Custom Song",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "run",
        "audio-analyzer",
        "python3",
        "-c",
        "from main import analyze_song; song = input('Song: '); artist = input('Artist: '); analyze_song(song, artist)"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    }
  ]
}
